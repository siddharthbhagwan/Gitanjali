<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/app"
	android:orientation="vertical" android:background="@drawable/papyrus" android:layout_width="25dp" >
    <LinearLayout android:id="@+id/tabBar" android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="#9B743D"
        android:orientation="horizontal" android:layout_marginLeft="-4dp" >
        <ImageView android:id="@+id/BtnSlide" android:layout_width="wrap_content" android:layout_height="match_parent"
             android:src="@drawable/gmenu"  />
        <TextView android:text="Gitanjali" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center" 
            android:textSize="30dp" android:textStyle="bold" android:paddingRight="40dp" android:background="#9B743D" android:textColor="#ffffff"/>
    </LinearLayout>
  	<LinearLayout android:id="@+id/tabBar2" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal"> 

	    <TextView android:id="@+id/tvPoemHeading" android:textStyle="bold" android:layout_width="fill_parent" android:layout_height="wrap_content" 
	        android:gravity="center" android:textSize="15dp" android:paddingTop="10dp"/>
    </LinearLayout>   
	<ZoomControls android:layout_height="wrap_content" android:id="@+id/ZoomControls01" android:layout_width="wrap_content" 
		android:visibility="visible" />	 	
    <TextView android:id="@+id/tvPoem" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingTop="10dp" 
        android:textSize="25dp" android:cacheColorHint="#ff00ff00" android:paddingLeft="10dp" android:maxLines="1000000" android:scrollbars="vertical">
    </TextView>
</LinearLayout>
